{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/crates/oxc_linter/src/schemas/oxlint.schema.json",
  "rules": {
    "correctness": "error",
    "suspicious": "warn",
    "perf": "warn",

    "no-unused-vars": "error",
    "eqeqeq": "warn",
    "no-param-reassign": "warn",
    "no-var": "warn",
    "no-new-func": "warn",
    "no-throw-literal": "warn",
    "guard-for-in": "warn",
    "default-case-last": "warn",
    "no-template-curly-in-string": "warn",

    "typescript/no-explicit-any": ["warn", { "ignoreRestArgs": true }],
    "typescript/no-non-null-assertion": "warn",
    "typescript/consistent-type-imports": "warn",
    "typescript/adjacent-overload-signatures": "warn",
    "typescript/prefer-for-of": "warn",

    "import/no-duplicates": "error",
    "import/no-unused-modules": "error",
    "import/first": "warn",
    "import/no-mutable-exports": "warn",

    "jest/expect-expect": "warn",
    "jest/no-focused-tests": "warn",
    "jest/no-disabled-tests": "warn",
    "jest/valid-expect": "warn",

    "promise/no-return-wrap": "warn"
  },
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "perf": "warn"
  },
  "plugins": ["typescript", "unicorn", "jest", "import", "promise"],
  "env": {
    "browser": false,
    "node": true,
    "es2021": true
  },
  "globals": {
    "NodeJS": "readonly"
  },
  "overrides": [
    {
      "files": ["*.spec.ts", "*.test.ts", "*.bench.ts", "benchmarks/**/*.ts"],
      "rules": {
        "typescript/no-explicit-any": ["warn", { "ignoreRestArgs": true }],
        "typescript/no-extraneous-class": "off",
        "no-console": "off",
        "no-unused-vars": "error"
      }
    },
    {
      "files": ["utils.ts"],
      "rules": {
        "typescript/no-extraneous-class": "off"
      }
    },
    {
      "files": ["managers.ts"],
      "rules": {
        "unicorn/no-array-sort": "off"
      }
    }
  ]
}

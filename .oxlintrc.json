{
  "$schema": "https://raw.githubusercontent.com/oxc-project/oxc/main/crates/oxc_linter/src/schemas/oxlint.schema.json",
  "rules": {
    "correctness": "error",
    "suspicious": "warn",
    "perf": "warn",
    "typescript/no-explicit-any": "warn",
    "no-unused-vars": "warn"
  },
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "perf": "warn"
  },
  "plugins": ["typescript", "unicorn"],
  "env": {
    "browser": false,
    "node": true,
    "es2021": true
  },
  "globals": {
    "NodeJS": "readonly"
  },
  "overrides": [
    {
      "files": ["*.spec.ts", "*.test.ts", "*.bench.ts", "benchmarks/**/*.ts"],
      "rules": {
        "typescript/no-explicit-any": "warn",
        "typescript/no-extraneous-class": "off",
        "no-console": "off",
        "no-unused-vars": "warn"
      }
    },
    {
      "files": ["utils.ts"],
      "rules": {
        "typescript/no-extraneous-class": "off"
      }
    },
    {
      "files": ["managers.ts"],
      "rules": {
        "unicorn/no-array-sort": "off"
      }
    }
  ]
}

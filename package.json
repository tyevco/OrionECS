{
  "name": "orion-ecs-monorepo",
  "version": "0.2.0",
  "private": true,
  "description": "OrionECS - Entity Component System framework monorepo",
  "packageManager": "npm@10.9.4",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "benchmark": "turbo run benchmark",
    "benchmark:comparative": "npx ts-node benchmarks/comparative/cli.ts --full",
    "benchmark:comparative:quick": "npx ts-node benchmarks/comparative/cli.ts --quick",
    "benchmark:report": "npx ts-node benchmarks/comparative/cli.ts --report",
    "benchmark:dashboard": "npx ts-node benchmarks/comparative/dashboard.ts",
    "prepare": "husky",
    "lint": "turbo run lint",
    "lint:ecs": "eslint --config eslint.config.js 'packages/**/*.ts' 'plugins/**/*.ts' 'examples/**/*.ts'",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "check": "turbo run check",
    "clean": "turbo run clean && rm -rf node_modules/.cache",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:status": "changeset status",
    "version": "changeset version",
    "release": "npm run build && npm run test && changeset publish",
    "release:dry-run": "npm run build && npm run test && changeset publish --dry-run",
    "validate:packages": "npm run typecheck && npm run lint && npm run test && npm run build",
    "validate:publish": "npm run validate:packages && npm run release:dry-run",
    "docs:generate": "typedoc",
    "docs:serve": "npx http-server docs -p 8080 -o"
  },
  "workspaces": [
    "packages/core",
    "packages/create",
    "packages/math",
    "packages/graphics",
    "packages/plugin-api",
    "packages/testing",
    "packages/eslint-plugin-ecs",
    "packages/vscode-extension",
    "examples",
    "plugins/canvas2d-renderer",
    "plugins/debug-visualizer",
    "plugins/decision-tree",
    "plugins/input-manager",
    "plugins/interaction-system",
    "plugins/physics",
    "plugins/spatial-partition",
    "plugins/profiling",
    "plugins/resource-manager",
    "plugins/state-machine",
    "plugins/timeline",
    "plugins/network",
    "tutorials/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@biomejs/biome": "^2.3.7",
    "@typescript-eslint/parser": "^8.0.0",
    "@typescript-eslint/utils": "^8.0.0",
    "eslint": "^9.0.0",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/benchmark": "^2.1.5",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "benchmark": "^2.1.4",
    "husky": "^9.1.7",
    "jest": "30.2.0",
    "jest-bench": "^29.7.1",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.29.0",
    "seedrandom": "^3.0.5",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.1",
    "turbo": "^2.6.1",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.ts": [
      "oxlint"
    ]
  }
}

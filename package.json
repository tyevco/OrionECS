{
  "name": "orion-ecs-monorepo",
  "version": "0.1.1-ts",
  "private": true,
  "description": "OrionECS - Entity Component System framework monorepo",
  "scripts": {
    "build": "npm run build --workspace=core",
    "test": "npm run test --workspace=core",
    "benchmark": "jest --projects ./jest.bench.config.js",
    "prepare": "husky",
    "lint": "npm run lint --workspace=core",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "npm run typecheck --workspace=core",
    "check": "npm run check --workspace=core"
  },
  "workspaces": [
    "core"
  ],
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@biomejs/biome": "^2.3.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/benchmark": "^2.1.5",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "benchmark": "^2.1.4",
    "husky": "^9.1.7",
    "jest": "30.2.0",
    "jest-bench": "^29.7.1",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.29.0",
    "seedrandom": "^3.0.5",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.ts": [
      "oxlint"
    ]
  }
}

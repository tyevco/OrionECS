{
  "name": "orion-ecs-monorepo",
  "version": "0.1.1-ts",
  "private": true,
  "description": "OrionECS - Entity Component System framework monorepo",
  "packageManager": "npm@10.9.4",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "benchmark": "turbo run benchmark",
    "prepare": "husky",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "typecheck": "turbo run typecheck",
    "check": "turbo run check",
    "clean": "turbo run clean && rm -rf node_modules/.cache"
  },
  "workspaces": [
    "core",
    "utils",
    "examples",
    "plugins/canvas2d-renderer",
    "plugins/input-manager",
    "plugins/interaction-system",
    "plugins/physics",
    "plugins/spatial-partition",
    "plugins/debug-visualizer",
    "plugins/profiling",
    "plugins/resource-manager"
  ],
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@biomejs/biome": "^2.3.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/benchmark": "^2.1.5",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "benchmark": "^2.1.4",
    "husky": "^9.1.7",
    "jest": "30.2.0",
    "jest-bench": "^29.7.1",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.29.0",
    "seedrandom": "^3.0.5",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.1",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "biome check --write --no-errors-on-unmatched"
    ],
    "*.ts": [
      "oxlint"
    ]
  }
}

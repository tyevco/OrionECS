{
  "name": "@orion-ecs/core",
  "version": "0.4.0",
  "description": "A lightweight and flexible Entity Component System (ECS) framework written in TypeScript",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "lint": "oxlint src",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "clean": "rm -rf dist coverage .turbo",
    "docs:generate": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx http-server docs -p 8080 -o",
    "docs:json": "typedoc --json docs/api.json",
    "docs:markdown": "typedoc --options typedoc.single-page.json"
  },
  "keywords": [
    "ecs",
    "entity-component-system",
    "game-development"
  ],
  "author": {
    "name": "Tyler Coles",
    "email": "tyevco@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tyevco/orionecs"
  },
  "bugs": {
    "url": "https://github.com/tyevco/orionecs/issues"
  },
  "homepage": "https://github.com/tyevco/orionecs#readme",
  "dependencies": {
    "@orion-ecs/plugin-api": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@biomejs/biome": "^2.3.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/benchmark": "^2.1.5",
    "@types/jest": "^30.0.0",
    "babel-jest": "^30.2.0",
    "benchmark": "^2.1.4",
    "husky": "^9.1.7",
    "jest": "30.2.0",
    "jest-bench": "^29.7.1",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.29.0",
    "seedrandom": "^3.0.5",
    "ts-jest": "^29.4.5",
    "tsup": "^8.5.1",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}

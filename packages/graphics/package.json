{
  "name": "@orion-ecs/graphics",
  "version": "0.3.0",
  "description": "Graphics primitives for OrionECS (Color, Mesh, Vertex)",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "test": "echo \"No tests yet\" && exit 0",
    "docs:generate": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx http-server docs -p 8081 -o"
  },
  "keywords": [
    "ecs",
    "orion-ecs",
    "graphics",
    "color",
    "mesh",
    "vertex",
    "rendering",
    "2d"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@orion-ecs/math": "*"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "30.2.0",
    "ts-jest": "^29.4.5",
    "tsup": "^8.0.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

{
  "name": "@orion-ecs/testing",
  "version": "1.0.0",
  "description": "Testing utilities for OrionECS - comprehensive tools for testing ECS systems and components",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "docs:generate": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:serve": "npx http-server docs -p 8082 -o"
  },
  "keywords": [
    "ecs",
    "orion-ecs",
    "testing",
    "test-utilities",
    "jest",
    "vitest",
    "unit-testing"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@orion-ecs/core": "^0.4.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "30.2.0",
    "@orion-ecs/core": "file:../core",
    "ts-jest": "^29.4.5",
    "tsup": "^8.0.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.3.0"
  },
  "publishConfig": {
    "access": "public"
  }
}

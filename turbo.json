{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "inputs": [
        "src/**",
        "games/**",
        "integrations/**",
        "*.html",
        "tsconfig.json",
        "tsup.config.ts",
        "vite.config.ts",
        "package.json"
      ]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "test/**", "*.spec.ts", "*.test.ts", "jest.config.js", "package.json"]
    },
    "lint": {
      "outputs": [],
      "inputs": ["src/**", "*.ts", "*.js", "biome.json", ".eslintrc*", "package.json"]
    },
    "lint:oxlint": {
      "outputs": [],
      "inputs": ["src/**", "*.ts", "package.json"]
    },
    "lint:biome": {
      "outputs": [],
      "inputs": ["src/**", "*.ts", "*.js", "biome.json", "package.json"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["src/**", "*.ts", "tsconfig.json", "package.json"]
    },
    "format": {
      "outputs": [],
      "inputs": ["src/**", "*.ts", "*.js", "*.json", "biome.json", "package.json"]
    },
    "format:check": {
      "outputs": [],
      "inputs": ["src/**", "*.ts", "*.js", "*.json", "biome.json", "package.json"]
    },
    "check": {
      "dependsOn": ["typecheck", "lint", "format:check"],
      "outputs": []
    },
    "benchmark": {
      "dependsOn": ["build"],
      "cache": false,
      "outputs": [],
      "inputs": ["benchmarks/**", "jest.bench.config.js", "package.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false,
      "outputs": []
    }
  },
  "globalDependencies": ["package-lock.json", "tsconfig.json"],
  "globalEnv": ["NODE_ENV"]
}
